@page "/"

<!DOCTYPE html>
<html>
    <head>
    <link href="AspBlazorComponentsApplication.styles.css" rel="stylesheet" />
    <title>Components</title>
    </head>
    <body>
        <h1>Hello @name</h1>
        <h2>@GetTime()</h2>
        <div>@((MarkupString)htmlstr)</div>
        <img src="/images/poster.jpg" />
        <About ParentTitle="App component"/>
        <ListSquare TitleList="Users" Items=@users />
    </body>
</html>

@code {
    string name = "Bobby";
    string GetTime() => $"Current time: {DateTime.Now.ToShortTimeString()}";
    string htmlstr = "<h3>Html text</h3>";

    List<string> users = new() { "Bobby", "Tommy", "Jimmy" };
}
